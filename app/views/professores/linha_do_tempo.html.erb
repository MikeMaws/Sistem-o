<body>
<% if policy(@users).linha_do_tempo? %>
 <div id="wrapper">
  <%= render partial: "professores/partial_index" %>
    <div id="page-wrapper"> 
     <div class="container-fluid">
      <div class="col-md-12">
       <div class="panel panel-default">
         <div class="panel-body">
          <h1 class="page-header">
              Lista de alunos cadastrados <small>Computação Paralela</small>
          </h1>
          <div class="row">
            <div class = col-md-4><h3>Tarefas para correção</h3></div>
          </div>
          
          
          <div class="list-group">
            <% @answers.each do |answers| %>
           <div class="row list-group-item">
            <%= link_to answers.link , target: :_blank do %>

             <div class="col-md-5">
                <h4 class="glyphicon glyphicon-thumbs-up "><span> <%= answers.subtask.task.nome%> </span> <small> <%=answers.subtask.nome%> </small> </h4>

            </div>
            <%end%>

              <div class="col-md-2">
                <span class="glyphicon glyphicon-thumbs-up", type= "text"> <span class =" badge pull-right"><%= answers.like %> </span> </span>
                <span class="glyphicon glyphicon-thumbs-down"> <span class =" badge pull-right"><%= answers.dislike %> </span> </span>
                <span class="glyphicon glyphicon-alert"> <span class =" badge pull-right"><%= answers.report %> </span> </span>
              </div>
              
              <!-- tem que corrigir somente teste-->
               <div class = col-md-1>  <%= select_tag 'user_id', options_for_select(@answers.collect{ |u| [ u.id] }) %> </div>
               
               <div class = col-md-3> observação </div>
              
               <div class = "col-md-1"> <%= link_to "Corrigir", nivel_answer_url(id: answers.id), method: :post, class: "btn btn-success pull-right"%> </div>
               
           
           </div>
           <%end%>
          </div> 
          
        </div>
       </div>
      </div>
     </div>
     <!-- /.container-fluid -->
   </div>
  <!-- /#page-wrapper -->
  </div>
<!-- /#wrapper -->
<% end %>
</body>










