<div class="container ">
  <div class="row">
     <div class="col-md-5 col-md-offset-3">
        <h1 align= "center">SISTEMÃO</1>
      </div>  
  </div>
</div>  

<div class="container ">
  <div class="col-md-5 col-md-offset-3">
    <div class="panel panel-default devise-bs ">
      <%= devise_error_messages! %>
      <div class="panel-heading">
        <h4>Cadastrar</h4>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
          <div class="form-group">
            <%= f.label :matricula %>
            <%= f.text_field :matricula, autofocus: true,placeholder: "Digite sua matricula", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name,placeholder: "Digite seu nome", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email,placeholder: "Digite seu email", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label "Senha" %>
            <%= f.password_field :password,placeholder: "Digite sua senha", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label "Confirmação da senha" %>
            <%= f.password_field :password_confirmation,placeholder: "Digite novamente sua senha", class: 'form-control' %>
          </div>
          <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-primary' %>
            <%= render 'devise/shared/links' %>
        <% end %>
      </div>
    
    </div>
  </div>
</div>
